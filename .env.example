# Example environment file for local development
# Copy this to `.env` and fill values (do NOT commit your real `.env`).

# Project
PROJECT_NAME=vibecode-full-stack-starter-kit
PROJECT_IDENTIFIER=vibecode-full-stack-starter-kit
CREATED_DATE=YYYY-MM-DD

# Ports
FRONTEND_PORT=8200
BACKEND_PORT=8201
PHP_FPM_PORT=8202
MYSQL_PORT=8203
REDIS_PORT=8204
TOOLS_PORT=8205

# Database (replace secrets locally)
DB_PASSWORD=your_mysql_password_here

# Redis
REDIS_PASSWORD=your_redis_password_here

# App
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8201

# Sanctum / CORS
SANCTUM_STATEFUL_DOMAINS=localhost:8200,localhost:3000
FRONTEND_URL=http://localhost:8200

# Note: keep sensitive values out of version control
