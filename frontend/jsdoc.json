{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": [
      "components",
      "hooks",
      "lib",
      "context",
      "pages"
    ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(node_modules|dist|.next)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "template": "templates/default",
    "encoding": "utf8",
    "destination": "./docs/jsdoc",
    "recurse": true,
    "readme": "./README.md"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}
