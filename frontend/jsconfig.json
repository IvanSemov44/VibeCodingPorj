{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/lib/*": ["lib/*"],
      "@/context/*": ["context/*"],
      "@/styles/*": ["styles/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react",
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "components/**/*",
    "hooks/**/*",
    "lib/**/*",
    "context/**/*",
    "pages/**/*",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}
