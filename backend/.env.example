# Demo users
# Set a reproducible demo password for seeded users. Change in production.
DEMO_USER_PASSWORD=P@ssw0rd!

# Safety flags for seeding
# Prevent running potentially-destructive seeders in production by default
ALLOW_SEED_IN_PRODUCTION=false
# When true, demo user passwords will be reset to `DEMO_USER_PASSWORD` during seeding
DEMO_USER_RESET_PASSWORD=false
